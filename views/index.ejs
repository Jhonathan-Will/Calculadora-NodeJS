<%- include('partials/header.ejs') %>
<body class="overflow-hidden vh-100 vw-100">

    <div class="row" >
        <div class="col-11">
            <div class=" d-sm-flex flex-sm-row justify-content-sm-center align-items-center vh-100 d-flex flex-column">
                <div class=" d-flex justify-content-center order-sm-1 order-2">
                <div class="calc">
                    <div class="container text-center">
                        <div class="col align-self-center ">
                            <input class="screen w-100 p-2" type="text" placeholder="0" name="" id="screen" disabled/>
                        </div>    
                    </div>
                    
                    <div class="container text-center ">
                        <div class="row g-1 m-1 mt-3">
                            <div class="col">
                                <button onclick="addNumber(1)" class=" btn btn-numbers w-100">1</button>
                            </div>
                            <div class="col">
                                <button onclick="addNumber(2)" class=" btn btn-numbers w-100">2</button>
                            </div>
                            <div class="col">
                                <button onclick="addNumber(3)" class=" btn btn-numbers w-100">3</button>
                            </div>
                            <div class="col">
                                <button onclick="setOperator('+')" class=" btn btn-operators w-100">+</button>
                            </div>
                        </div>
                    </div>
            
                    <div class="container text-center ">
                        <div class="row g-1 m-1 mt-3">
                            <div class="col w-100">
                                <button onclick="addNumber(4)" class=" btn btn-numbers w-100">4</button>
                            </div>
                            <div class="col">
                                <button onclick="addNumber(5)" class=" btn btn-numbers w-100">5</button>
                            </div>
                            <div class="col">
                                <button onclick="addNumber(6)" class=" btn btn-numbers w-100">6</button>
                            </div>
                            <div class="col">
                                <button onclick="setOperator('-')" class=" btn btn-operators w-100">-</button>
                            </div>
                        </div>
                    </div>
            
                    <div class="container text-center ">
                        <div class="row g-1 m-1 mt-3">
                            <div class="col w-100">
                                <button onclick="addNumber(7)" class=" btn btn-numbers w-100">7</button>
                            </div>
                            <div class="col">
                                <button onclick="addNumber(8)" class=" btn btn-numbers w-100">8</button>
                            </div>
                            <div class="col">
                                <button onclick="addNumber(9)" class=" btn btn-numbers w-100">9</button>
                            </div>
                            <div class="col">
                                <button onclick="setOperator('X')" class=" btn btn-operators w-100">x</button>
                            </div>
                        </div>
                    </div>
            
                    <div class="container text-center ">
                        <div class="row g-1 m-1 mt-3">
                            <div class="col w-100">
                                <button onclick="clearCalculator()" class="btn btn-clear w-100">C</button>
                            </div>
                            <div class="col">
                                <button onclick="addNumber(0)" class=" btn btn-numbers w-100">0</button>
                            </div>
                            <div class="col">
                                <form id="formulario">
                                    <button type="submit" onclick="equals(event)" class=" btn btn-equals w-100">=</button>
                                </form>
                            </div>
                            <div class="col">
                                <button onclick="setOperator('/')" class=" btn btn-operators w-100">รท</button>
                            </div>
                        </div>
                    </div>
                </div>
    
            </div>
        </div>
        </div>
        

        <div class="col-1">
            <div class=" order-sm-1 order-1">
                <div class="row">
                        <div class="d-flex justify-content-center mt-3">
                            <button class="btn btn-equals" data-bs-toggle="offcanvas" data-bs-target="#offcanvasRight" aria-controls="offcanvasRight"><i class="bi bi-clock-history"></i></button>
                        </div> 


                    <div class="offcanvas offcanvas-end offcanvas-backgrond" tabindex="-1" id="offcanvasRight" aria-labelledby="offcanvasRightLabel">
                        <div class="offcanvas-header">
                          <h5 class="offcanvas-title" id="offcanvasRightLabel">Historico</h5>
                          <button type="button" class="btn-close btn-equals" data-bs-dismiss="offcanvas" aria-label="Close"></button>
                        </div>
                        <div class="offcanvas-body overflow-auto custom-scroll" id="history">
                            <%- include('partials/history') %>
                        </div>
                    </div>
                   
                </div>
            </div>  
        </div>
        
            </div>

        </div>
    </body>
        
    
<%- include('partials/footer.ejs') %>
